<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0" metadata-complete="true">

	<display-name>PagesSante</display-name>
	
	<servlet>
	    <servlet-name>pagessante</servlet-name>
	    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	    <load-on-startup>1</load-on-startup>
	</servlet>
  
   <servlet-mapping>
      <servlet-name>pagessante</servlet-name>
      <url-pattern>/pagessante/*</url-pattern>
   </servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<filter>
        <filter-name>encoding-filter</filter-name>
        <filter-class>
            org.springframework.web.filter.CharacterEncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
        	<param-name>forceEncoding</param-name>
        	<param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
	    <filter-name>AttributesFilter</filter-name>
	    <filter-class>com.emosist.pagessante.filters.AttributesFilter</filter-class>
	    <init-param>
            <param-name>version</param-name>
            <param-value>0.8</param-value>
        </init-param>
	</filter>
	
	<filter-mapping>
        <filter-name>encoding-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AttributesFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

	<context-param> 
		<param-name>contextConfigLocation</param-name> 
		<param-value>/WEB-INF/pagessante-servlet.xml</param-value> 
	</context-param>

    <listener>
	    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<session-config>
        <session-timeout>120</session-timeout>
    </session-config>
    
    <error-page>
        <error-code>404</error-code>
        <location>/pagessante/error</location>
    </error-page>
    <!-- <error-page>
        <error-code>405</error-code>
        <location>/WEB-INF/jsp/Error-404.jsp</location>
    </error-page> -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/pagessante/error</location>
    </error-page>
</web-app>